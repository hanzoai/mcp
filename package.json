{
  "name": "@hanzo/mcp",
  "version": "2.0.0",
  "description": "Hanzo MCP Server - Unified search, TreeSitter AST, vector store, and agent orchestration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "hanzo-mcp": "./dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:cli",
    "build:lib": "esbuild src/index.ts --bundle --platform=node --target=node16 --format=esm --outfile=dist/index.js --external:@modelcontextprotocol/sdk --external:glob --external:commander --external:zod --external:zod-to-json-schema",
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --target=node16 --format=esm --outfile=dist/cli.js --external:@modelcontextprotocol/sdk --external:glob --external:commander --external:zod --external:zod-to-json-schema && chmod +x dist/cli.js",
    "dev": "tsc --watch",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "tools",
    "development"
  ],
  "author": "Hanzo AI",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/mime-types": "^3.0.1",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "mime-types": "^3.0.1",
    "minimatch": "^9.0.3",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "optionalDependencies": {
    "jsautogui": "^1.0.0",
    "playwright": "^1.47.0",
    "playwright-core": "^1.47.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.10.5",
    "esbuild": "^0.19.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hanzoai/mcp.git"
  },
  "homepage": "https://hanzo.ai",
  "bugs": {
    "url": "https://github.com/hanzoai/mcp/issues"
  }
}
